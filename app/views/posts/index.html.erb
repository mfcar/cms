<h1>Listing posts</h1>

<table>
<% @posts.each do |post| %>
  <tr>
    <td><h1><%= post.title %></h1></td>
    <td><%= link_to 'Show', post %>|<%= link_to 'Edit', edit_post_path(post) %>|<%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  <tr>  
  <tr>
    <td><%= post.name %></td><tr> 
  <tr>
    <td><%=raw post.content %></td>
  <tr>
  <tr>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td>_________________________________</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
